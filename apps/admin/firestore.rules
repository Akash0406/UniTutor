rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth != null
        && request.auth.token.admin == true;
    }

    // Tutor EOIs
    match /tutorEOIs/{docId} {
      allow read, write: if isAdmin();
    }

    // Student EOIs
    match /studentEOIs/{docId} {
      allow read, write: if isAdmin();
    }

    // Blog posts
    match /blogPosts/{docId} {
      allow read: if resource.data.published == true;
      allow write: if isAdmin();
    }

    // Site configuration (openings, flags)
    match /siteConfig/{docId} {
      allow read, write: if isAdmin();
    }

    match /settings/{docId} {
        // Public website needs to read settings/public for openings
        allow read: if docId == "public";

        // Only admins can write any settings docs
        allow create, update, delete: if isAdmin();
    }

  }
}
